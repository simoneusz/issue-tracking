<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Projects</h1>
  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>
  <tbody>

  <% if @projects %>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= truncate(project.description, length: 100) %></td>
        <td>
          <% if project.user == current_user %>
            <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-secondary' %>
            <%= button_to 'Delete', project, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="3">No projects found</td>
    </tr>
  <% end %>
  </tbody>
</table>
